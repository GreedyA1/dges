{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dges/ui/project-card": ["libs/ui/project-card/src/index.ts"],
      "@dges/ui/project-details": ["libs/ui/project-details/src/index.ts"],
      "@dges/store/projects/projects-firebase": [
        "libs/store/projects/projects-firebase/src/index.ts"
      ],
      "@dges/store/projects/projects-api": [
        "libs/store/projects/projects-api/src/index.ts"
      ],
      "@dges/types/project": ["libs/types/project/src/index.ts"],
      "@dges/data/projects": ["libs/data/projects/src/index.ts"],
      "@dges/api/projects/firebase": [
        "libs/api/projects/firebase/src/index.ts"
      ],
      "@dges/forms/project-form": ["libs/forms/project-form/src/index.ts"],
      "@dges/forms/login-form": ["libs/forms/login-form/src/index.ts"],
      "@dges/ui/login-dialog": ["libs/ui/login-dialog/src/index.ts"],
      "@dges/api/auth/firebase": ["libs/api/auth/firebase/src/index.ts"],
      "@dges/store/auth/firebase": ["libs/store/auth/firebase/src/index.ts"],
      "@dges/types/auth": ["libs/types/auth/src/index.ts"],
      "@dges/forms/chips": ["libs/forms/chips/src/index.ts"],
      "@dges/ui/snackbar": ["libs/ui/snackbar/src/index.ts"],
      "@dges/ui/confirm-dialog": ["libs/ui/confirm-dialog/src/index.ts"],
      "@dges/api/storage/firebase": ["libs/api/storage/firebase/src/index.ts"],
      "@dges/ui/drop-zone": ["libs/ui/drop-zone/src/index.ts"],
      "@dges/ui/upload-images": ["libs/ui/upload-images/src/index.ts"],
      "@dges/ui/upload-task": ["libs/ui/upload-task/src/index.ts"],
      "@dges/forms/upload-task": ["libs/forms/upload-task/src/index.ts"],
      "@dges/forms/upload-images": ["libs/forms/upload-images/src/index.ts"],
      "@dges/store/storage/firebase": [
        "libs/store/storage/firebase/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts"]
}
